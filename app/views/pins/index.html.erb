<div class="panel panel-default">
  <div class="panel-heading">
<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Yer Pins:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.string %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', pin, class: "btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path, class: "btn btn-default" %>
 